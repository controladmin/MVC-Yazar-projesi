@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}
<br />
<style>
    tbody tr:nth-child(odd) {
        background: #deb887;
    }

    tbody tr:nth-child(even) {
        background: #5f9ea0;
    }

    thead th {
        background: #a52a2a;
        color: white !important;
    }

    #ghvr:hover {
        background: #B0E0E6;
    }

    #shvr:hover {
        background: #FF4500;
    }

    #ehvr:hover {
        background: #0000CD;
    }

    #bhvr:hover {
        background: #E0E0E0;
        color: black;
    }
</style>

