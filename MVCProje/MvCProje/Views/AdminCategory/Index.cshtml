@if ((string)TempData["information"] == "Güncelleme")
{

    <script type="text/javascript">

        swal({
            title: "Kayıt Güncelleme",
            text: "Kayıt Güncellendi",
            icon: "info",
            buton: "OK"
        });

    </script>
}

@if ((string)TempData["information"] == "Ekleme")
{

    <script type="text/javascript">

        swal({
            title: "Kayıt Ekleme",
            text: "Kayıt Eklendi",
            icon: "success",
            buton: "OK"
        });

    </script>
}

@if ((string)TempData["information"] == "Delete")
{

    <script type="text/javascript">

        swal({
            title: "Kayıt Silme",
            text: "Kayıt Silindi",
            icon: "warning",
            buton: "OK"
        });

    </script>
}


