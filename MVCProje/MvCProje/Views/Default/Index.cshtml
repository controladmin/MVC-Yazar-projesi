@using EntityLayer.Concrete
@model List<Content>

<br />
<!DOCTYPE html>
@if (Model.Count > 0)
{
    <html>
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="timeline">
                                @foreach (var item in Model)
                                {
                                    <div class="time-label">
                                        <span class="bg-success">@(((DateTime)item.ContentDate).ToString("dd-MM-yyyy")) - <a href="/WriterPanelContent/WriterContent/@item.HeadingId">@item.Writer.WriterName @item.Writer.WriterSurname </a></span>
                                    </div>

                                    <div>
                                        <i class="fas fa-comment bg-yellow"></i>
                                        <div class="timeline-item">
                                            <h3 class="timeline-header"><a href="#">Yazar Adı:</a> Başlık: @item.Heading.HeadingName </h3>
                                            <div class="timeline-body">
                                                @item.ContentValue
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <a href="javascript:history.go(-1)" class="btn btn-warning">Önceki Sayfaya Geri Dön</a>
    </body>
</html>
}
else
{
<div class="">
    <span style="color:red;">Geçerli bir content bilgisi bulunmamaktadır!!!</span>
    <a href="javascript:history.go(-1)" class="btn btn-warning">Önceki Sayfaya Geri Dön</a>
</div>
}
