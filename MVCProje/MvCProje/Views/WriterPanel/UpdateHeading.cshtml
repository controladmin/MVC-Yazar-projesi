@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "UpdateHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<style>
    #ghvr:hover {
        background: #7986CB;
        color: black;
    }
</style>


<br />
<h2>Başlık Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateHeading", "WriterPanel", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.HeadingId)
    @Html.HiddenFor(x => x.WriterId)
    @Html.HiddenFor(x=>x.HeadingDate)

    @Html.Label("Başlık Adını Giriniz")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @*bu kodu validation kullanıcı ara yüzünde gözüksün diye yazıyoruz*@
    @Html.ValidationMessageFor(x => x.HeadingName, null, new { @class = "text-danger" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vwcategory, "Kategori Seçiniz",new { @class = "form-control" })
    @*bu kodu validation kullanıcı ara yüzünde gözüksün diye yazıyoruz*@
    @Html.ValidationMessageFor(x => x.Category.CategoryId, null, new { @class = "text-danger" })
    <br />
    <button id="ghvr" class="btn btn-primary">Başlık Güncelle</button>
</div>

}




