@model EntityLayer.Concrete.Mesaj
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Yeni Mesaj Oluşturma Sayfası</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <!-- Theme style -->
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminTema/plugins/summernote/summernote-bs4.css">

    <script src="~/AdminTema/plugins/summernote/summernote.min.js"></script>
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yeni Mesaj Oluşturma Sayfası</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("MesajListBox", "Contact")
                <!-- /.col -->
                <div class="col-md-9">
                    @using (Html.BeginForm("YeniMesaj", "Mesaj",FormMethod.Post))
                    {
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Yeni Mesaj</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.Label("Alıcı Adresini Giriniz")
                                    @Html.TextBoxFor(x => x.AliciMail, new { @class = "form-control" })
                                    @*bu kodu validation kullanıcı ara yüzünde gözüksün diye yazıyoruz*@
                                    @Html.ValidationMessageFor(x => x.AliciMail, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Konuyu Giriniz")
                                    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
                                    @*bu kodu validation kullanıcı ara yüzünde gözüksün diye yazıyoruz*@
                                    @Html.ValidationMessageFor(x => x.Konu, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Mesaj İçeriğini Giriniz")
                                    <textarea id="compose-textarea" name="MesajKonusu" class="form-control" style="height: 300px">
                               
                                
                                     </textarea>
                                    @*bu kodu validation kullanıcı ara yüzünde gözüksün diye yazıyoruz*@
                                    @Html.ValidationMessageFor(x => x.MesajKonusu, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="btn btn-default btn-file">
                                        <i class="fas fa-paperclip"></i> Dosya Ekle
                                        <input type="file" name="attachment">
                                    </div>
                                    <p class="help-block">Max. 32MB</p>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                </div>
                                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal</button>
                            </div>
                            <!-- /.card-footer -->
                        </div>
                    }
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/AdminTema/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminTema/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminTema/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminTema/dist/js/demo.js"></script>
    <!-- Summernote -->
    <script src="~/AdminTema/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })</script>
</body>
</html>







